<?xml version="1.0" encoding="utf-8"?>

<!-- These should be sorted in desc order as they are in fact bitset values (android selects first match) -->
<level-list xmlns:android="http://schemas.android.com/apk/res/android"
	android:exitFadeDuration="250">

	<item android:minLevel="@integer/ITEM_BG_LEVEL_POPUP" android:maxLevel="10000"
		>
		<shape>
			<corners android:radius="?corners_popup"/>
			<solid android:color="?colorBgPrimary"/>
		</shape>
	</item>
	
	<item android:minLevel="0" android:maxLevel="0" android:drawable="@drawable/ripple_rounded_medium"/>
</level-list>
