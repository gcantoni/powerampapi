<com.maxmpz.audioplayer.preference.SearchItemView 
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:w="http://schemas.android.com/apk/res-auto"
	
	style="@style/SettingsSearchItemView"
>
	<com.maxmpz.widget.base.FastTextView android:id="@+id/image"
		style="@style/SettingsSearchItemImage"
	/>	
	
	<!-- NOTE: SceneParams are needed for title/line2 for a bit better transition (otherwise they can jump due to non-processing by Scene) -->
	
	<com.maxmpz.widget.base.FastLayout android:id="@+id/texts"
		style="@style/SettingsSearchItemTexts"
	>
	<com.maxmpz.widget.base.FastTextView android:id="@+id/title"
			style="@style/SettingsSearchItemTitle"
	/>
	<com.maxmpz.widget.base.FastTextView android:id="@+id/line2"
			style="@style/SettingsSearchItemLine2"
	/>
	<com.maxmpz.widget.base.FastTextView android:id="@+id/line3"
		style="@style/SettingsSearchItemLine3"
	/>
			
	</com.maxmpz.widget.base.FastLayout>

</com.maxmpz.audioplayer.preference.SearchItemView>
