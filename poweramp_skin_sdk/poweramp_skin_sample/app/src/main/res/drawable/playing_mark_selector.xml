<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="250" android:exitFadeDuration="250">
	<!-- Drawable should be set only for activated state -->
	<item android:state_activated="true">
		<layer-list>
			<item>
				<shape android:shape="oval">
					<solid android:color="?com.maxmpz.audioplayer:colorBgPrimary"/>
				</shape>
			</item>
			<item>
				<inset android:drawable="@drawable/check_big" android:insetTop="4dp" android:insetLeft="4dp" android:insetRight="4dp" android:insetBottom="4dp"/>
			</item>
		</layer-list>
	</item>
</selector>
