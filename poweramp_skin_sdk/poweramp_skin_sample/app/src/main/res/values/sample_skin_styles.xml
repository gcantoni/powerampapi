	<!-- Optional styles for color1 option, color2 option select, and bg_color popup -->
	<style name="SampleSkin_color1">
		<item name="android:textColorPrimary">#f00</item>
	</style>
	<style name="SampleSkin_color_red">
		<item name="android:textColorPrimary">#f00</item>
